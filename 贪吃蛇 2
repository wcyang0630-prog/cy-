    <script>
        // ç»˜åˆ¶é¢„è§ˆå›¾
        function drawPreview() {
            const canvas = document.getElementById('previewCanvas');
            const ctx = canvas.getContext('2d');
            const size = canvas.width;
            
            // èƒŒæ™¯
            ctx.fillStyle = '#0d1b2a';
            ctx.fillRect(0, 0, size, size);
            
            // ç»˜åˆ¶ç½‘æ ¼
            ctx.strokeStyle = '#1a2332';
            ctx.lineWidth = 1;
            const gridSize = 20;
            for (let i = 0; i <= size / gridSize; i++) {
                ctx.beginPath();
                ctx.moveTo(i * gridSize, 0);
                ctx.lineTo(i * gridSize, size);
                ctx.stroke();
                ctx.beginPath();
                ctx.moveTo(0, i * gridSize);
                ctx.lineTo(size, i * gridSize);
                ctx.stroke();
            }
            
            // ç»˜åˆ¶è›‡
            const centerX = size / 2;
            const centerY = size / 2;
            const segmentSize = 18;
            
            // è›‡èº«
            ctx.fillStyle = '#4CAF50';
            for (let i = 0; i < 5; i++) {
                ctx.fillRect(centerX - 100 + i * segmentSize, centerY - segmentSize/2, segmentSize - 2, segmentSize - 2);
            }
            
            // è›‡å¤´
            ctx.fillStyle = '#66BB6A';
            ctx.fillRect(centerX - 100 + 5 * segmentSize, centerY - segmentSize/2, segmentSize - 2, segmentSize - 2);
            
            // çœ¼ç›
            ctx.fillStyle = 'white';
            ctx.beginPath();
            ctx.arc(centerX - 100 + 5 * segmentSize + 8, centerY - 5, 3, 0, Math.PI * 2);
            ctx.fill();
            ctx.beginPath();
            ctx.arc(centerX - 100 + 5 * segmentSize + 8, centerY + 5, 3, 0, Math.PI * 2);
            ctx.fill();
            
            ctx.fillStyle = 'black';
            ctx.beginPath();
            ctx.arc(centerX - 100 + 5 * segmentSize + 8, centerY - 5, 2, 0, Math.PI * 2);
            ctx.fill();
            ctx.beginPath();
            ctx.arc(centerX - 100 + 5 * segmentSize + 8, centerY + 5, 2, 0, Math.PI * 2);
            ctx.fill();
            
            // é£Ÿç‰©
            ctx.fillStyle = '#F44336';
            ctx.beginPath();
            ctx.arc(centerX + 50, centerY, 8, 0, Math.PI * 2);
            ctx.fill();
        }

        // æ£€æµ‹æ˜¯å¦å·²å®‰è£…
        function isInstalled() {
            return window.matchMedia('(display-mode: standalone)').matches ||
                   window.navigator.standalone === true;
        }

        // æ˜¾ç¤ºå®‰è£…æç¤º
        function showInstallPrompt() {
            if (!isInstalled() && isMobile()) {
                setTimeout(() => {
                    const prompt = document.getElementById('installPrompt');
                    prompt.classList.add('show');
                }, 3000);
            }
        }

        // å…³é—­å®‰è£…æç¤º
        function closeInstallPrompt() {
            document.getElementById('installPrompt').classList.remove('show');
            localStorage.setItem('installPromptDismissed', 'true');
        }

        // æ˜¾ç¤ºå®‰è£…æŒ‡å—
        function showInstallGuide() {
            closeInstallPrompt();
            document.getElementById('install').scrollIntoView({ behavior: 'smooth' });
        }

        // æ£€æµ‹ç§»åŠ¨è®¾å¤‡
        function isMobile() {
            return /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
        }

        // åˆå§‹åŒ–
        window.addEventListener('load', () => {
            drawPreview();
            
            // æ£€æŸ¥æ˜¯å¦åº”è¯¥æ˜¾ç¤ºå®‰è£…æç¤º
            if (!localStorage.getItem('installPromptDismissed')) {
                showInstallPrompt();
            }
        });

        // å¤„ç† beforeinstallprompt äº‹ä»¶ï¼ˆAndroid Chromeï¼‰
        let deferredPrompt;
        window.addEventListener('beforeinstallprompt', (e) => {
            e.preventDefault();
            deferredPrompt = e;
            showInstallPrompt();
        });
    </script>
