<body>
    <div class="game-container">
        <div style="text-align: right; margin-bottom: 10px;">
            <a href="home.html" style="color: #667eea; text-decoration: none; font-size: 0.9em;">â† è¿”å›é¦–é¡µ</a>
        </div>
        <h1>ğŸ è´ªåƒè›‡æ¸¸æˆ</h1>
        <div class="score-board">
            <div class="score-item">å¾—åˆ†: <span id="score">0</span></div>
            <div class="score-item">æœ€é«˜åˆ†: <span id="highScore">0</span></div>
        </div>
        <canvas id="gameCanvas" width="400" height="400"></canvas>
        <div class="controls">
            <div class="info">ä½¿ç”¨æ–¹å‘é”®æˆ– WASD æ§åˆ¶è›‡çš„ç§»åŠ¨</div>
            <div class="info">æŒ‰ç©ºæ ¼é”®æš‚åœ/ç»§ç»­</div>
        </div>
        <div class="qr-container">
            <h3>ğŸ“± æ‰‹æœºæ‰«ç æ¸¸ç©</h3>
            <div id="qrcode"></div>
            <div class="qr-url" id="qrUrl"></div>
            <div class="qr-info">ç¡®ä¿æ‰‹æœºå’Œç”µè„‘åœ¨åŒä¸€WiFiç½‘ç»œ</div>
        </div>
    </div>

    <div class="game-over" id="gameOver">
        <h2>æ¸¸æˆç»“æŸï¼</h2>
        <p>æœ€ç»ˆå¾—åˆ†: <span id="finalScore">0</span></p>
        <button onclick="restartGame()">é‡æ–°å¼€å§‹</button>
    </div>

    <script>
        const canvas = document.getElementById('gameCanvas');
        const ctx = canvas.getContext('2d');
        const scoreElement = document.getElementById('score');
        const highScoreElement = document.getElementById('highScore');
        const gameOverElement = document.getElementById('gameOver');
        const finalScoreElement = document.getElementById('finalScore');

        const gridSize = 20;
        const tileCount = canvas.width / gridSize;

        let snake = [
            {x: 10, y: 10}
        ];
        let food = {};
        let dx = 0;
        let dy = 0;
        let score = 0;
        let highScore = localStorage.getItem('snakeHighScore') || 0;
        let gameRunning = true;
        let gamePaused = false;

        highScoreElement.textContent = highScore;

        function randomFood() {
            food = {
                x: Math.floor(Math.random() * tileCount),
                y: Math.floor(Math.random() * tileCount)
            };
        }

        function drawGame() {
            clearCanvas();
            drawSnake();
            drawFood();
            drawScore();
        }

        function clearCanvas() {
            // ç»˜åˆ¶æ·±è‰²èƒŒæ™¯
            ctx.fillStyle = '#0d1b2a';
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            
            // ç»˜åˆ¶ç½‘æ ¼çº¿
            ctx.strokeStyle = '#1a2332';
            ctx.lineWidth = 1;
            for (let i = 0; i <= tileCount; i++) {
                ctx.beginPath();
                ctx.moveTo(i * gridSize, 0);
                ctx.lineTo(i * gridSize, canvas.height);
                ctx.stroke();
                ctx.beginPath();
                ctx.moveTo(0, i * gridSize);
                ctx.lineTo(canvas.width, i * gridSize);
                ctx.stroke();
            }
        }

        function drawSnake() {
            snake.forEach((segment, index) => {
                const x = segment.x * gridSize;
                const y = segment.y * gridSize;
                const size = gridSize - 1;
                
                if (index === 0) {
                    // ç»˜åˆ¶è›‡å¤´ - æ›´çœŸå®çš„æ•ˆæœ
                    drawSnakeHead(x, y, size);
                } else {
                    // ç»˜åˆ¶è›‡èº« - æ¸å˜æ•ˆæœ
                    drawSnakeBody(x, y, size, index);
                }
            });
        }

        function drawSnakeHead(x, y, size) {
            // åˆ›å»ºå¤´éƒ¨æ¸å˜
            const gradient = ctx.createLinearGradient(x, y, x + size, y + size);
            gradient.addColorStop(0, '#81c784');
            gradient.addColorStop(0.5, '#66bb6a');
            gradient.addColorStop(1, '#4caf50');
            
            // ç»˜åˆ¶å¤´éƒ¨é˜´å½±
            ctx.shadowColor = 'rgba(0, 0, 0, 0.5)';
            ctx.shadowBlur = 4;
            ctx.shadowOffsetX = 2;
            ctx.shadowOffsetY = 2;
            
            // ç»˜åˆ¶åœ†è§’çŸ©å½¢å¤´éƒ¨
            ctx.fillStyle = gradient;
            roundRect(ctx, x + 1, y + 1, size - 2, size - 2, 6);
            ctx.fill();
            
            // é‡ç½®é˜´å½±
            ctx.shadowColor = 'transparent';
            ctx.shadowBlur = 0;
            ctx.shadowOffsetX = 0;
            ctx.shadowOffsetY = 0;
            
            // ç»˜åˆ¶é«˜å…‰
            const highlightGradient = ctx.createLinearGradient(x, y, x + size/2, y + size/2);
            highlightGradient.addColorStop(0, 'rgba(255, 255, 255, 0.4)');
            highlightGradient.addColorStop(1, 'rgba(255, 255, 255, 0)');
            ctx.fillStyle = highlightGradient;
            roundRect(ctx, x + 1, y + 1, size/2 - 1, size/2 - 1, 3);
            ctx.fill();
            
            // ç»˜åˆ¶çœ¼ç›
            if (dx !== 0 || dy !== 0) {
                drawEyes(x, y, size);
            }
        }

        function drawSnakeBody(x, y, size, index) {
            // æ ¹æ®ä½ç½®åˆ›å»ºæ¸å˜ï¼ˆè®©èº«ä½“æœ‰æ·±åº¦æ„Ÿï¼‰
            const gradient = ctx.createLinearGradient(x, y, x + size, y + size);
            const baseColor = index % 2 === 0 ? '#4caf50' : '#66bb6a';
            gradient.addColorStop(0, '#81c784');
            gradient.addColorStop(0.5, baseColor);
            gradient.addColorStop(1, '#388e3c');
            
            // è½»å¾®é˜´å½±
            ctx.shadowColor = 'rgba(0, 0, 0, 0.3)';
            ctx.shadowBlur = 2;
            ctx.shadowOffsetX = 1;
            ctx.shadowOffsetY = 1;
            
            // ç»˜åˆ¶åœ†è§’çŸ©å½¢èº«ä½“
            ctx.fillStyle = gradient;
            roundRect(ctx, x + 1, y + 1, size - 2, size - 2, 5);
            ctx.fill();
            
            // é‡ç½®é˜´å½±
            ctx.shadowColor = 'transparent';
            ctx.shadowBlur = 0;
            ctx.shadowOffsetX = 0;
            ctx.shadowOffsetY = 0;
            
            // æ·»åŠ çº¹ç†çº¿æ¡
            ctx.strokeStyle = 'rgba(76, 175, 80, 0.3)';
            ctx.lineWidth = 1;
            ctx.beginPath();
            ctx.moveTo(x + size * 0.3, y + size * 0.5);
            ctx.lineTo(x + size * 0.7, y + size * 0.5);
            ctx.stroke();
        }

        function drawEyes(x, y, size) {
            const eyeSize = 3;
            const eyeOffset = 5;
            const centerX = x + size / 2;
            const centerY = y + size / 2;
            
            // æ ¹æ®ç§»åŠ¨æ–¹å‘ç¡®å®šçœ¼ç›ä½ç½®
            let eye1X, eye1Y, eye2X, eye2Y;
            
            if (dx === 1) { // å‘å³
                eye1X = centerX + eyeOffset;
                eye1Y = centerY - 3;
                eye2X = centerX + eyeOffset;
                eye2Y = centerY + 3;
            } else if (dx === -1) { // å‘å·¦
                eye1X = centerX - eyeOffset;
                eye1Y = centerY - 3;
                eye2X = centerX - eyeOffset;
                eye2Y = centerY + 3;
            } else if (dy === -1) { // å‘ä¸Š
                eye1X = centerX - 3;
                eye1Y = centerY - eyeOffset;
                eye2X = centerX + 3;
                eye2Y = centerY - eyeOffset;
            } else if (dy === 1) { // å‘ä¸‹
                eye1X = centerX - 3;
                eye1Y = centerY + eyeOffset;
                eye2X = centerX + 3;
                eye2Y = centerY + eyeOffset;
            } else {
                return;
            }
            
            // ç»˜åˆ¶çœ¼ç›ï¼ˆç™½è‰²èƒŒæ™¯ï¼‰
            ctx.fillStyle = 'white';
            ctx.beginPath();
            ctx.arc(eye1X, eye1Y, eyeSize, 0, Math.PI * 2);
            ctx.fill();
            ctx.beginPath();
            ctx.arc(eye2X, eye2Y, eyeSize, 0, Math.PI * 2);
            ctx.fill();
            
            // ç»˜åˆ¶ç³å­”ï¼ˆé»‘è‰²ï¼‰
            ctx.fillStyle = 'black';
            ctx.beginPath();
            ctx.arc(eye1X, eye1Y, eyeSize * 0.6, 0, Math.PI * 2);
            ctx.fill();
            ctx.beginPath();
            ctx.arc(eye2X, eye2Y, eyeSize * 0.6, 0, Math.PI * 2);
            ctx.fill();
        }

        function drawFood() {
            const x = food.x * gridSize;
            const y = food.y * gridSize;
            const size = gridSize - 1;
            const centerX = x + size / 2;
            const centerY = y + size / 2;
            
            // åˆ›å»ºè‹¹æœæ¸å˜
            const gradient = ctx.createRadialGradient(centerX, centerY, 0, centerX, centerY, size/2);
            gradient.addColorStop(0, '#ff6b6b');
            gradient.addColorStop(0.7, '#ee5a52');
            gradient.addColorStop(1, '#c92a2a');
            
            // é˜´å½±
            ctx.shadowColor = 'rgba(0, 0, 0, 0.4)';
            ctx.shadowBlur = 5;
            ctx.shadowOffsetX = 2;
            ctx.shadowOffsetY = 2;
            
            // ç»˜åˆ¶åœ†å½¢é£Ÿç‰©
            ctx.fillStyle = gradient;
            ctx.beginPath();
            ctx.arc(centerX, centerY, size/2 - 2, 0, Math.PI * 2);
            ctx.fill();
            
            // é‡ç½®é˜´å½±
            ctx.shadowColor = 'transparent';
            ctx.shadowBlur = 0;
            ctx.shadowOffsetX = 0;
            ctx.shadowOffsetY = 0;
            
            // æ·»åŠ é«˜å…‰
            ctx.fillStyle = 'rgba(255, 255, 255, 0.5)';
            ctx.beginPath();
            ctx.arc(centerX - 3, centerY - 3, 4, 0, Math.PI * 2);
            ctx.fill();
            
            // æ·»åŠ å¶å­
            ctx.fillStyle = '#2d5016';
            ctx.beginPath();
            ctx.ellipse(centerX, centerY - size/2 + 2, 3, 5, -Math.PI/4, 0, Math.PI * 2);
            ctx.fill();
        }

        // è¾…åŠ©å‡½æ•°ï¼šç»˜åˆ¶åœ†è§’çŸ©å½¢
        function roundRect(ctx, x, y, width, height, radius) {
            ctx.beginPath();
            ctx.moveTo(x + radius, y);
            ctx.lineTo(x + width - radius, y);
            ctx.quadraticCurveTo(x + width, y, x + width, y + radius);
            ctx.lineTo(x + width, y + height - radius);
            ctx.quadraticCurveTo(x + width, y + height, x + width - radius, y + height);
            ctx.lineTo(x + radius, y + height);
            ctx.quadraticCurveTo(x, y + height, x, y + height - radius);
            ctx.lineTo(x, y + radius);
            ctx.quadraticCurveTo(x, y, x + radius, y);
            ctx.closePath();
        }

        function drawScore() {
            scoreElement.textContent = score;
        }

        function moveSnake() {
            if (!gameRunning || gamePaused) return;
            
            // å¦‚æœè¿˜æ²¡æœ‰å¼€å§‹ç§»åŠ¨ï¼ˆdxå’Œdyéƒ½æ˜¯0ï¼‰ï¼Œä¸æ‰§è¡Œç§»åŠ¨
            if (dx === 0 && dy === 0) return;

            const head = {x: snake[0].x + dx, y: snake[0].y + dy};

            // æ£€æŸ¥å¢™å£ç¢°æ’
            if (head.x < 0 || head.x >= tileCount || head.y < 0 || head.y >= tileCount) {
                gameOver();
                return;
            }

            // æ£€æŸ¥è‡ªèº«ç¢°æ’ï¼ˆè·³è¿‡å¤´éƒ¨æœ¬èº«ï¼‰
            for (let i = 0; i < snake.length; i++) {
                if (head.x === snake[i].x && head.y === snake[i].y) {
                    gameOver();
                    return;
                }
            }

            snake.unshift(head);

            // æ£€æŸ¥æ˜¯å¦åƒåˆ°é£Ÿç‰©
            if (head.x === food.x && head.y === food.y) {
                score += 10;
                randomFood();
                // ç¡®ä¿é£Ÿç‰©ä¸ä¼šç”Ÿæˆåœ¨è›‡èº«ä¸Š
                while (snake.some(segment => segment.x === food.x && segment.y === food.y)) {
                    randomFood();
                }
            } else {
                snake.pop();
            }
        }

        function gameOver() {
            gameRunning = false;
            if (score > highScore) {
                highScore = score;
                localStorage.setItem('snakeHighScore', highScore);
                highScoreElement.textContent = highScore;
            }
            finalScoreElement.textContent = score;
            gameOverElement.style.display = 'block';
        }

        function restartGame() {
            snake = [{x: 10, y: 10}];
            dx = 0;
            dy = 0;
            score = 0;
            gameRunning = true;
            gamePaused = false;
            gameOverElement.style.display = 'none';
            randomFood();
            drawGame();
        }

        function changeDirection(event) {
            if (!gameRunning) return;

            const keyPressed = event.key.toLowerCase();

            // æ–¹å‘é”®æˆ– WASD
            if (keyPressed === 'arrowup' || keyPressed === 'w') {
                if (dy !== 1) {
                    dx = 0;
                    dy = -1;
                }
            } else if (keyPressed === 'arrowdown' || keyPressed === 's') {
                if (dy !== -1) {
                    dx = 0;
                    dy = 1;
                }
            } else if (keyPressed === 'arrowleft' || keyPressed === 'a') {
                if (dx !== 1) {
                    dx = -1;
                    dy = 0;
                }
            } else if (keyPressed === 'arrowright' || keyPressed === 'd') {
                if (dx !== -1) {
                    dx = 1;
                    dy = 0;
                }
            } else if (keyPressed === ' ') {
                event.preventDefault();
                gamePaused = !gamePaused;
            }
        }

        // è§¦æ‘¸æ§åˆ¶ï¼ˆç§»åŠ¨ç«¯ï¼‰
        let touchStartX = 0;
        let touchStartY = 0;

        function handleTouchStart(event) {
            touchStartX = event.touches[0].clientX;
            touchStartY = event.touches[0].clientY;
        }

        function handleTouchEnd(event) {
            if (!gameRunning) return;
            
            const touchEndX = event.changedTouches[0].clientX;
            const touchEndY = event.changedTouches[0].clientY;
            
            const deltaX = touchEndX - touchStartX;
            const deltaY = touchEndY - touchStartY;
            
            const minSwipeDistance = 30;
            
            if (Math.abs(deltaX) > Math.abs(deltaY)) {
                // æ°´å¹³æ»‘åŠ¨
                if (Math.abs(deltaX) > minSwipeDistance) {
                    if (deltaX > 0 && dx !== -1) {
                        // å‘å³
                        dx = 1;
                        dy = 0;
                    } else if (deltaX < 0 && dx !== 1) {
                        // å‘å·¦
                        dx = -1;
                        dy = 0;
                    }
                }
            } else {
                // å‚ç›´æ»‘åŠ¨
                if (Math.abs(deltaY) > minSwipeDistance) {
                    if (deltaY > 0 && dy !== -1) {
                        // å‘ä¸‹
                        dx = 0;
                        dy = 1;
                    } else if (deltaY < 0 && dy !== 1) {
                        // å‘ä¸Š
                        dx = 0;
                        dy = -1;
                    }
                }
            }
        }

        function gameLoop() {
            if (gameRunning && !gamePaused) {
                moveSnake();
            }
            drawGame();
        }

        // ç”ŸæˆäºŒç»´ç 
        function generateQRCode() {
            // è·å–å½“å‰é¡µé¢çš„å®Œæ•´URL
            const currentUrl = window.location.href;
            
            // æ˜¾ç¤ºURL
            document.getElementById('qrUrl').textContent = currentUrl;
            
            // æ¸…ç©ºä¹‹å‰çš„äºŒç»´ç 
            document.getElementById('qrcode').innerHTML = '';
            
            // ç”Ÿæˆæ–°çš„äºŒç»´ç 
            new QRCode(document.getElementById('qrcode'), {
                text: currentUrl,
                width: 150,
                height: 150,
                colorDark: '#000000',
                colorLight: '#ffffff',
                correctLevel: QRCode.CorrectLevel.H
            });
        }

        // æ³¨å†Œ Service Worker (PWAæ”¯æŒ)
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/service-worker.js')
                    .then((registration) => {
                        console.log('Service Worker æ³¨å†ŒæˆåŠŸ:', registration.scope);
                    })
                    .catch((error) => {
                        console.log('Service Worker æ³¨å†Œå¤±è´¥:', error);
                    });
            });
        }

        // åˆå§‹åŒ–æ¸¸æˆ
        randomFood();
        drawGame();
        document.addEventListener('keydown', changeDirection);
        
        // è§¦æ‘¸äº‹ä»¶ï¼ˆç§»åŠ¨ç«¯ï¼‰
        canvas.addEventListener('touchstart', handleTouchStart, { passive: true });
        canvas.addEventListener('touchend', handleTouchEnd, { passive: true });
        
        setInterval(gameLoop, 150);
        
        // é¡µé¢åŠ è½½å®Œæˆåç”ŸæˆäºŒç»´ç 
        window.addEventListener('load', generateQRCode);
    </script>
</body>
</html>
